<div class=''>
  <div class='bg-light'>
    <h4>プロフィール編集</h4>
    <%= form_with model: @user, url: user_registration_path, id: 'update_profile', local: true do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>

      <%= f.label :image, "アイコン" %><br />
      <%= attachment_image_tag @user, :image, size: "72x72", fallback: "user_default.png"%><br>
      <%= f.attachment_field :image, placeholder: "プロフィール画像" %>

      <div class="field">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, id: 'update_profile_name__input' %>
      </div>

      <div class="field">
        <%= f.label :text, "自己紹介" %><br />
        <%= f.text_area :text, id: 'update_profile_text__input' %>
      </div>

      <div class="actions">
        <%= f.submit "更新する" %>
      </div>
    <% end %>
    <%= link_to user_path(@user.id) do %>
      <button>更新しないで戻る</button>
    <% end %>
  </div>
</div>
