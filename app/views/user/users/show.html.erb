<div class="home">
  <%# 左サイド %>
  <div class='home__left-side'>
    <%= attachment_image_tag @user, :image, fallback: "user_default.png",class: 'timeline__user-icon' %><br>
    <%= @user.name %><br>
    <%= @user.text %><br>
    投稿数<br>
    コメント数<br>
    フォロー<br>
    フォロワー<br>
    良いねした<br>
  　良いねされた<br>
    <% if @user.id == current_user.id %>
      <%= link_to edit_user_registration_path do %>
        <button>プロフィール変更</button>
      <% end %>
    <% end %><br>
    <%= link_to new_tweet_path do %>
      <button>投稿する</button>
    <% end %><br>
    <%= link_to home_path do %>
      <button>タイムライン</button>
    <% end %>
  </div>

  <%# メイン部分 %>
  <div class='home__main'>
    <%= render 'user/shared/timeline', tweets: @tweets %>
  </div>

  <%# 右サイド %>
  <div class='home__right-side'>
  </div>
</div>

<%# タイムライン内でサイトのプレビューを表示 %>
<%= javascript_include_tag 'preview.js' %>
