<div class=admin-show>
  <table border=1>
    <tr>
      <th>ユーザーID</th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th>アイコン</th>
      <td><%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "user_default.png", size: "36x36" %></td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td><%= @user.text %></td>
    </tr>
    <tr>
      <th>有効会員フラグ</th>
      <td><%= @user.is_active %></td>
    </tr>
    <tr>
      <th>登録日時</th>
      <td><%= @user.created_at_ja %></td>
    </tr>
    <tr>
      <th>更新日時</th>
      <td><%= @user.updated_at_ja %></td>
    </tr>
  </table>

  <%# 編集 %>
  <%= link_to '編集', edit_admin_user_path(@user.id) %><br>
  <%# 一覧 %>
  <%= link_to 'ユーザー一覧に戻る', admin_users_path %>
</div>
