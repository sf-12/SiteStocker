<h4>プロフィール編集</h4>
<%= form_with model: @user, url: admin_user_path(@user.id), id: 'admin_update_profile', local: true do |f| %>
  <%= render "user/shared/error_messages", resource: resource %>

  <%= f.label :image, "アイコン" %><br />
  <%= attachment_image_tag @user, :image, size: "72x72", fallback: "user_default.png"%><br>
  <%= f.attachment_field :image, placeholder: "プロフィール画像" %>

  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, id: 'admin_update_profile_name__input' %>
  </div>

  <div class="field">
    <%= f.label :text, "自己紹介" %><br />
    <%= f.text_area :text, id: 'admin_update_profile_text__input' %>
  </div>

  <div class="field">
    <%= f.label :is_active, "有効会員フラグ" %><br />
    <%= f.check_box :is_active, id: 'admin_update_profile_text__input' %>
  </div>

  <div class="actions">
    <%= f.submit "編集する" %>
  </div>
<% end %>
<%= link_to admin_users_path do %>
  <button>編集しないで戻る</button>
<% end %>
